{
  "collectionName": "components_seo_seo_metadata",
  "info": {
    "displayName": "SEO Metadata",
    "description": "Basic SEO metadata for content"
  },
  "options": {},
  "attributes": {
    "metaTitle": {
      "type": "string",
      "required": true,
      "maxLength": 70
    },
    "metaDescription": {
      "type": "text",
      "required": true,
      "maxLength": 160
    },
    "metaKeywords": {
      "type": "text"
    },
    "metaRobots": {
      "type": "enumeration",
      "enum": [
        "index, follow",
        "index, nofollow",
        "noindex, follow",
        "noindex, nofollow"
      ],
      "default": "index, follow",
      "required": true
    },
    "canonicalURL": {
      "type": "string",
      "description": "Set canonical URL if this content should point to another URL"
    },
    "ogTitle": {
      "type": "string",
      "maxLength": 70,
      "description": "Open Graph title (leave blank to use Meta Title)"
    },
    "ogDescription": {
      "type": "text",
      "maxLength": 200,
      "description": "Open Graph description (leave blank to use Meta Description)"
    },
    "ogImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"],
      "description": "Image for social media sharing (recommended: 1200Ã—630 pixels)"
    }
  }
}
