{
  "kind": "collectionType",
  "collectionName": "staff_members",
  "info": {
    "singularName": "staff-member",
    "pluralName": "staff-members",
    "displayName": "Staff Member",
    "description": "Manage law firm staff profiles"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "bio": {
      "type": "richtext"
    },
    "email": {
      "type": "email"
    },
    "phone": {
      "type": "string"
    },
    "specialties": {
      "type": "text"
    },
    "education": {
      "type": "component",
      "repeatable": true,
      "component": "staff.education"
    },
    "experience": {
      "type": "component",
      "repeatable": true,
      "component": "staff.experience"
    },
    "socialMedia": {
      "type": "component",
      "repeatable": false,
      "component": "staff.social-media"
    },
    "blog_posts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::blog-post.blog-post",
      "mappedBy": "author"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "order": {
      "type": "integer",
      "default": 999
    }
  }
}
